  "main": "index.js",
  "files": [
    "index.js",
    "src",
    "babel.config.js",
    "rollup.config.js",
    "webpack.config.js",
    "workbox.config.js"
  ],
  "scripts": {
    "prebuild": "mkdir -p dist; rm -rf dist/*",
    "build": "yarn build:assets && yarn build:client && yarn build:server",
    "build:assets": "cp -a src/client/images src/client/manifest.json dist",
    "build:client": "webpack",
    "build:server": "rollup -c rollup.config.js src/server/index.js",
    "precommit": "npm run lint",
    "deploy": "npx now --public",
    "deploy:alias": "npx now alias `pbpaste` hackernewspwa.com",
    "lint": "eslint src/**/*.js src/**/*.jsx",
    "lighthouse:visual": "lighthouse http://localhost:3000/ --view",
    "lighthouse": "npm run build && node ./scripts/lighthouse.js",
    "start": "node index.js",
    "watch": "yarn watch:client & yarn watch:server",
    "watch:client": "webpack --watch",
    "watch:server": "nodemon -e js,jsx --watch src/server --exec 'node -r ./bootstrap.server src/server'",
    "now-build": "NODE_ENV=production npm run build",
    "now-start": "NODE_ENV=production npm start"
  },
  "dependencies": {
    "csx": "^8.5.0",
    "fastify": "^1.4.0",
    "fastify-compress": "^0.6.0",
    "fastify-static": "^0.11.0",
